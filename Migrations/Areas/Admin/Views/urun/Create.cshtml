@model Commerce.Areas.Admin.Models.urun

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>urun</h4>
<hr />
<div class="row">
    <div class="col-md-4">
		<form asp-action="Create" method="post" enctype="multipart/form-data">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="urunName" class="control-label"></label>
				<input asp-for="urunName" class="form-control" />
				<span asp-validation-for="urunName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="urunAçıklama" class="control-label"></label>
				<input asp-for="urunAçıklama" class="form-control" />
				<span asp-validation-for="urunAçıklama" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="stock" class="control-label"></label>
				<input asp-for="stock" class="form-control" />
				<span asp-validation-for="stock" class="text-danger"></span>
			</div>
			<select name="kategoriId" id="kategoriId" class="form-control">
				@foreach (var item in ViewBag.kategoriler)
				{
					<option value="@item.kategoriId">@item.kategoriName</option>
				}
			</select>
			<div class="form-group">
				<label asp-for="Price" class="control-label"></label>
				<input asp-for="Price" class="form-control" />
				<span asp-validation-for="Price" class="text-danger"></span>
			</div>
			<input type="file" name="photo" />
			<br />

			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		</form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
